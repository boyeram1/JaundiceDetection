<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_card"
        android:layout_marginLeft="@dimen/margin_card"
        android:layout_marginRight="@dimen/margin_card"
        android:elevation="@dimen/elevation_card">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_card">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/test_result_child_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_text_padding"
                    android:text="New Test"
                    android:textSize="@dimen/card_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/test_result_percentage_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_text_padding"
                    android:text="XXX%"
                    android:textSize="@dimen/card_text_size" />
            </TableRow>

        </TableLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>