<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_card"
        android:layout_marginRight="@dimen/margin_card"
        android:layout_marginTop="@dimen/margin_card"
        android:elevation="@dimen/elevation_card" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/child_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="@dimen/card_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/child_birth_date_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/label_day_of_birth"
                android:textStyle="bold"
                android:layout_below="@id/child_name_text_view"/>

            <TextView
                android:id="@+id/child_birth_date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/child_birth_date_label"
                android:layout_below="@id/child_name_text_view"
                android:text="Date" />

            <TextView
                android:id="@+id/child_birth_time_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/child_birth_date_label"
                android:textStyle="bold"
                android:text="@string/label_time_of_birth" />

            <TextView
                android:id="@+id/child_birth_time_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/child_birth_time_label"
                android:layout_below="@id/child_birth_date_label"
                android:text="Time" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>