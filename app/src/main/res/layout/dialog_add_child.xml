<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/child_name_text_view"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/label_child_name"
            android:textSize="@dimen/dialog_text_size"/>

        <EditText
            android:id="@+id/edit_child_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_name"
            android:inputType="textCapSentences"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/child_name_text_view"
            android:layout_alignBaseline="@id/child_name_text_view"
            android:textSize="@dimen/dialog_text_size"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/child_day_of_birth_text_view"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/label_day_of_birth"
            android:textSize="@dimen/dialog_text_size"/>

        <EditText
            android:id="@+id/edit_child_day_of_birth"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_day"
            android:inputType="date"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/child_day_of_birth_text_view"
            android:layout_alignBaseline="@id/child_day_of_birth_text_view"
            android:textSize="@dimen/dialog_text_size"
            android:layout_alignParentRight="true"
            android:focusable="false"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/child_time_of_birth_text_view"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/label_time_of_birth"
            android:textSize="@dimen/dialog_text_size"/>

        <EditText
            android:id="@+id/edit_child_time_of_birth"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_time"
            android:inputType="date"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/child_time_of_birth_text_view"
            android:layout_alignBaseline="@id/child_time_of_birth_text_view"
            android:textSize="@dimen/dialog_text_size"
            android:layout_alignParentRight="true"
            android:focusable="false" />
    </RelativeLayout>

</LinearLayout>